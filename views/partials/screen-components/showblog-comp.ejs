<%- include('../reusable-code/navbar') %>

<div class="max-w-7xl mx-auto px-6 py-12">
  <h1 class="text-4xl font-bold text-center text-indigo-400 mb-12">Latest Blogs</h1>

  <div class="grid gap-10 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    <% blogs.forEach(blog => { %>
      <div class="bg-gray-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform transition duration-300">
        <img
          src="/uploads/<%= blog.coverImage %>"
          alt="<%= blog.coverImage %>"
          class="h-52 w-full object-cover"
        />

        <div class="p-6 flex flex-col justify-between h-64">
          <div>
            <h2 class="text-xl font-semibold text-white mb-3 truncate"><%= blog.title %></h2>
            <p class="text-gray-300 text-sm line-clamp-3"><%= blog.body %></p>
          </div>

          <div class="flex justify-between items-center mt-6">
            <span class="text-xs text-gray-500">
              <%= blog.createdAt.toDateString() %>
            </span>
            <a href="/blog/<%= blog._id %>" class="text-indigo-400 hover:text-indigo-200 text-sm font-medium">
              Read More â†’
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (blogs.length === 0) { %>
    <p class="text-center text-gray-400 mt-16 text-lg">No blogs found.</p>
  <% } %>
</div>

<%- include('../reusable-code/footer') %>
