<%- include('../reusable-code/navbar') %>

<div class="max-w-7xl mx-auto mb-10">
  <h1 class="text-4xl font-bold mb-8 text-center">Latest Blogs</h1>

  <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    <% blogs.forEach(blog => { %>
    <div
      class="bg-gray-800 rounded-2xl shadow-lg overflow-hidden transition-transform hover:-translate-y-1 hover:shadow-2xl duration-300"
    >
      <img
        src="/uploads/<%= blog.coverImage %>"
        alt="<%= blog.coverImage %>"
        class="h-48 w-full object-cover"
      />

      <div class="p-5">
        <h2 class="text-2xl font-semibold mb-2"><%= blog.title %></h2>
        <p class="text-gray-300 text-sm line-clamp-2 mb-4"><%= blog.body %></p>
        <div class="text-right text-gray-400 text-xs">
          <%= blog.createdAt.toDateString() %>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <% if (blogs.length === 0) { %>
  <p class="text-center text-gray-400 mt-10">No blogs found.</p>
  <% } %>
</div>
<hr class="mb-10" style="opacity: 0;">
<!-- <marquee behavior="slow" direction="horizontal" class="mb-10">Blogs</marquee> -->
<hr class="mb-2" style="opacity: 0;">

